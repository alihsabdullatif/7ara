                android:layout_height="match_parent"
                android:text="المجموع بعد الحسم"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:fontFamily="@font/rubik_bold"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/discount_amount_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/gh35row4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/gv50row4"
            android:background="@drawable/box_blue_faint"
            android:layout_marginRight="5dp"

            >

            <TextView
                android:id="@+id/total_ad_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/BlueText"
                android:textStyle="bold"
                android:text="6700"
                android:fontFamily="@font/rubik_bold"
                android:textSize="21dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/discount_prcnt_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/box_red"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/gv50row4"
            >

            <TextView
                android:id="@+id/discount_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="الحسم"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:fontFamily="@font/rubik_bold"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/discount_percent_value_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toBottomOf="@id/gh35row4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/gv50row4"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/box_red_faint"


            >

            <TextView
                android:id="@+id/discount_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/CherryText"
                android:textStyle="bold"
                android:text="300"
                android:fontFamily="@font/rubik_bold"
                android:textSize="21dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"

                android:singleLine="true"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom= "20dp"
        android:id="@+id/row5"
        android:layout_below="@id/row4"
        >

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gh35row5"
            android:orientation="horizontal"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintGuide_percent="0.35"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gv50row5"
            android:orientation="vertical"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintGuide_percent="0.5"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profit_ad_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/box_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/gv50row5"
