<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/row1"
        >

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gh35row1"
            android:orientation="horizontal"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintGuide_percent="0.35"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/namelayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/box_red"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            >

            <TextView
                android:id="@+id/name_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="أسم المادة"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:fontFamily="@font/rubik_bold"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/name_value_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/gh35row1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/box_red_faint"


            >

            <TextView
                android:id="@+id/name_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/CherryText"
                android:textStyle="bold"
                android:text="محارم ميموزا"
                android:fontFamily="@font/rubik_bold"
                android:textSize="21dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/row2"
        android:layout_below="@id/row1"
        >

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gh35row2"
            android:orientation="horizontal"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintGuide_percent="0.35"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gv50row2"
            android:orientation="vertical"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintGuide_percent="0.5"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/box_orange"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/gv50row2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="5dp"
            >

            <TextView
                android:id="@+id/wholesale_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="سعر القطعة جملة"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:fontFamily="@font/rubik_bold"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sale_amount_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/gh35row2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/gv50row2"
            android:background="@drawable/box_orange_faint"
            android:layout_marginLeft="5dp"

            >

            <TextView
                android:id="@+id/wholesale_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/OrangeText"
                android:textStyle="bold"
                android:text="6400"
                android:fontFamily="@font/rubik_bold"
                android:textSize="21dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/wholesale_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/box_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/gv50row2"
            >

            <TextView
                android:id="@+id/retail_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="سعر القطعة مفرق"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:fontFamily="@font/rubik_bold"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/wholesale_value_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="5dp"
            app:layout_constraintTop_toBottomOf="@id/gh35row2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/gv50row2"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/box_blue_faint"


            >

            <TextView
                android:id="@+id/retail_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/Blue"
                android:textStyle="bold"
                android:text="7000"
                android:fontFamily="@font/rubik_bold"
                android:textSize="21dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/row2.5"
        android:layout_below="@id/row2"
        android:background="@drawable/box_orange_outline"
        >
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/pricechangelist"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/row2.5.1"
        android:layout_below="@id/row2.5"
        android:background="@drawable/box_orange_outline"
        >
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/itempricechangelist"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/row3"
        android:layout_below="@id/row2.5.1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gh35row3"
            android:orientation="horizontal"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintGuide_percent="0.35"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gv50row3"
            android:orientation="vertical"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintGuide_percent="0.5"

            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profit_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/box_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/gv50row3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="5dp"
            >

            <TextView
                android:id="@+id/profit_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="الربح في القطعة"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:fontFamily="@font/rubik_bold"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profit_amount_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/gh35row3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/gv50row3"
            android:background="@drawable/box_green_faint"
            android:layout_marginRight="5dp"

            >

            <TextView
                android:id="@+id/profit_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/GreenText"
                android:textStyle="bold"
                android:text="600"
                android:fontFamily="@font/rubik_bold"
                android:textSize="21dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/prcnt_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/gv50row3"
            android:background="@drawable/box_green_outline"

            >

            <TextView
                android:id="@+id/profit_percent_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="نسبة الربح في القطعة"
                android:textAlignment="center"
                android:textColor="@color/Green"
                android:fontFamily="@font/rubik_bold"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/percent_value_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toBottomOf="@id/gh35row3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/gv50row3"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/box_green_outline"


            >

            <TextView
                android:id="@+id/profit_percent_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/Green"
                android:textStyle="bold"
                android:text="20%"
                android:fontFamily="@font/rubik_bold"
                android:textSize="21dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"

                android:singleLine="true"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>